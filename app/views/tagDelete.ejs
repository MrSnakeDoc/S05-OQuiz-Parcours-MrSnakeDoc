<%- include('partials/header') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
	<h2 class="h1 display-4">Modifiez un tag</h2>
</div>
<% if (locals.error) {%>
<div class="error"><%= error %></div>
<%}%>
<form action="/admin/tagDelete" method="POST" class="form-signin">
	<label for="tags">Choisissez le tag que vous voulez supprimer: </label>
	<input type="text" name="tags" list="tags" class="form-control" />
	<datalist id="tags">
		<% for(element of result) {%>
		<option value="<%= element.name %>"><%= element.name %></option>
		<% } %>
	</datalist>
	<div class="form-group text-center">
		<button type="submit" class="btn btn-danger" style="margin-top: 2rem">
			Supprimer
		</button>
	</div>
</form>
<%- include('partials/footer') %>
