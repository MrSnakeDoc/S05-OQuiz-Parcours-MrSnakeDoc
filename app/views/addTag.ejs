<%- include('partials/header') %>
<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
	<h2 class="h1 display-4">Ajouter un tag</h2>
</div>
<% if(locals.error) { %>
<div class="error"><%= locals.error %></div>
<% } %>
<form action="/admin/addTag" method="POST" class="form-signin">
	<div class="form-label-group">
		<input
			type="addTag"
			class="form-control"
			id="addTag"
			name="addTag"
			aria-describedby="addTagHelp"
			placeholder="Ajouter le nouveau tag ici"
		/>
		<label for="lastname">Ajouter le nouveau tag ici</label>
	</div>
	<div class="form-group text-center">
		<button type="submit" class="btn btn-primary">Envoyer</button>
	</div>
</form>
<%- include('partials/footer') %>
