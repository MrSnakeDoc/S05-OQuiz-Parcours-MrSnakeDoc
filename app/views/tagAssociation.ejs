<%- include('partials/header') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
	<h2 class="h1 display-4">Modifiez un tag</h2>
</div>
<% if(locals.error) { %>
<div class="error"><%= locals.error %></div>
<% } %>
<div class="row">
	<div class="col-6 offset-3">
		<form action="/admin/tagAssociation" method="POST" class="form-signin">
			<label for="quizz">Associez le quizz</label>
			<div class="form-label-group">
				<select
					class="form-control"
					id="quizz"
					name="quizz"
					aria-describedby="quizzHelp"
				>
					<% for(element of quizz) {%>
					<option value="<%= element.id %>"><%= element.title %></option>
					<% } %>
				</select>
			</div>

			<label for="tag">au tag</label>
			<div class="form-label-group">
				<select
					class="form-control"
					id="tag"
					name="tag"
					aria-describedby="tagHelp"
				>
					<% for(element of tags) {%>
					<option value="<%= element.id %>"><%= element.name %></option>
					<% } %>
				</select>
			</div>

			<div class="form-group text-center">
				<button type="submit" class="btn btn-primary">Envoyer</button>
			</div>
		</form>
	</div>
</div>
<%- include('partials/footer') %>
